#!/bin/bash
#   if on a gpu node and mdrun is selected, run the "mdrun_mpi" executable directly
if test `nvidia-smi|grep -c failed` -eq 0; then
    if test $# -gt 0; then
       if test $1 = 'mdrun'; then
          /opt/gromacs/bin/mdrun_mpi ${@:2}
       else
          /opt/gromacs/bin/gmx_mpi.real $@
       fi
    else
         /opt/gromacs/bin/gmx_mpi.real
    fi
else
    /opt/gromacs/bin/gmx_mpi.real $@
fi
