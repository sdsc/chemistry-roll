<package>apbs</package>
<package>lammps</package>
<package>namd</package>

<post>

<file name="/etc/profile.d/abps.csh" perms="0644">
set path = ( /opt/abps/bin $path )
</file>

<file name="/etc/profile.d/lammps.csh" perms="0644">
set path = ( /opt/lammps/bin $path )
</file>

<file name="/etc/profile.d/namd.csh" perms="0644">
set path = ( /opt/namd/bin $path )
</file>

<file name="/etc/profile.d/abps.sh" perms="0644">
export PATH=/opt/abps/bin:$PATH
</file>

<file name="/etc/profile.d/lammps.sh" perms="0644">
export PATH=/opt/lammps/bin:$PATH
</file>

<file name="/etc/profile.d/namd.sh" perms="0644">
export PATH=/opt/namd/bin:$PATH
</file>

