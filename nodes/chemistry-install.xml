<post>

<file name="/etc/profile.d/apbs.csh" perms="0644">
set path = ( /opt/apbs/bin $path )
</file>

<file name="/etc/profile.d/apbs.sh" perms="0644">
export PATH=/opt/apbs/bin:$PATH
</file>

<file name="/etc/profile.d/lammps.csh" perms="0644">
set path = ( /opt/lammps/bin $path )
</file>

<file name="/etc/profile.d/lammps.sh" perms="0644">
export PATH=/opt/lammps/bin:$PATH
</file>

<file name="/etc/profile.d/namd.csh" perms="0644">
set path = ( /opt/namd/2.8/bin $path )
</file>

<file name="/etc/profile.d/namd.sh" perms="0644">
export PATH=/opt/namd/2.8/bin:$PATH
</file>

<file name="/etc/profile.d/gromacs.csh" perms="0644">
set path = ( /opt/gromacs/bin $path )
</file>

<file name="/etc/profile.d/gromacs.sh" perms="0644">
export PATH=/opt/gromacs/bin:$PATH
</file>

</post>

